@model CutNFood.Web.Models.ProductViewModel
@{
    ViewBag.Title = "EditProduct";
}

<h2>@ViewBag.Title.</h2>


@using (Html.BeginForm("EditProduct", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <h4>Create a new product.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(m=>m.product.product_id)
    <div class="form-group">
        @Html.LabelFor(m => m.product.category_id, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.product.category_id, Model.categories, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.product.productName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.product.productName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.product.productPrice, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.product.productPrice, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.product.productImage, new { @class = "col-md-2 control-label" })
        @Html.HiddenFor(m => m.product.productImage)
        <div class="col-md-10">
            <div>
                @if (Model.product != null && Model.product.productImage != null)
                {
                    <img alt="" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.product.productImage))" />
                }
            </div>
            <input type="file" name="postedFile" />

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.product.isAvailable, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.product.isAvailable)
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="book-a-table-btn" value="Update" />
        </div>
    </div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




